<section class="large-11 columns" ng-controller="dashboardCtrl">
	<h1>Dashboard</h1>
	<div class="large-12 columns">

	<section class="people large-4 columns">
		
		<div class="pricing-table">
			<input type="search" ng-model="people" placeholder="Filtrar por nombre..." />

			<ul>
				
				<li class="bullet-item large-12 colums item animate-repeat"  ng-repeat="group in response | filter:{name: people}">
				<div ng-click="showDetails = ! showDetails" class="left"><i class="fi-minus" ng-show="showDetails"></i><i class="fi-plus" ng-hide="showDetails" ></i>{{group.name}}</div>
					
					<ul ng-show="showDetails">
						<li class="bullet-item item" ng-repeat="family in group.assets">{{family.family.name}}</li>	
					</ul>
				</li>
				
			</ul>
		</div>
	</section>
	<section class="chart large-8 columns">
		<canvas id="line" class="chart chart-line" data="data" labels="labels" legend="true" series="series" click="onClick" height="75"></canvas>  
	</section>
	</div>

	<div class="row  large-11 columns">
		<section class="map large-8 columns">
			Map
		</section>

		<section class="alerts large-4 columns">
			Alerts
		</section>
	</div>
</section>
