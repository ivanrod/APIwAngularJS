<section class="large-11 columns" ng-controller="dashboardCtrl as dashboard">
	
	<h1>Dashboard</h1>
	<div class="large-12 columns"  >

	<article  class="people large-4 columns" >
		<h4>Usuarios</h4>
		<div cg-busy="dashboard.usersPromise" class="pricing-table">
			<input type="search" ng-model="dashboard.people" placeholder="Filtrar por nombre..." />

			<ul class="groupName">
				
				<li class="bullet-item large-12 colums item animate-repeat"  ng-repeat="group in dashboard.response | filter:{name: dashboard.people}">
				<div class="left">
						<div ng-click="showDetails = ! showDetails" class="left" ><i class="fi-minus" ng-show="showDetails"></i><i class="fi-plus" ng-hide="showDetails" >
					</i></div>{{group.name}}
				</div>
					<div class="circle right" ng-style="dashboard.myStyle($index)"></div>
					
					<ul ng-show="showDetails">
						<li class="bullet-item item" ng-repeat="family in group.assets">{{family.assetId}}</li>	
					</ul>
				</li>
				
			</ul>
		</div>
	</article>
	<article class="map large-8 columns" ng-controller="mapsCtrl as maps" cg-busy="dashboard.mapPromise" >
		<h4>Mapa</h4>
		<ui-gmap-google-map center='maps.map.center' class="large-12" zoom='maps.map.zoom'>
			<ui-gmap-circle ng-repeat="c in maps.circles track by c.id" center="c.center" stroke="c.stroke" fill="c.fill" radius="c.radius"
              visible="c.visible" geodesic="c.geodesic" editable="c.editable" draggable="c.draggable" clickable="c.clickable"></ui-gmap-circle>
              <ui-gmap-markers models="maps.randomMarkers" coords="'self'" icon="'icon'"></ui-gmap-markers>
		</ui-gmap-google-map>

	</article>

	</div>

	<div class="large-12 columns" cg-busy="dashboard.usersPromise">
		<article class="chart large-8 columns" >
			<h4>Nº de alertas por usuario</h4>
			<canvas id="line" class="chart chart-line" data="dashboard.data" labels="dashboard.labels" legend="true" series="dashboard.series" click="onClick"></canvas>  
		</article>

		<article class="alerts large-4 columns">
			<h4>Últimas alertas</h4>

		<div class="pricing-table" >

			<ul class="groupName">
				
				<li class="bullet-item large-12 colums item animate-repeat"  ng-repeat="alert in dashboard.alertTexts">
				<div class="left">{{alert.text}}</div>
				</li>
				
			</ul>
		</div>



		</article>
	</div>
</section>
